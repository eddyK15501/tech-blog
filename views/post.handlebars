{{#with singlePost}}
<div class="main-blog-container">
    <div class="blog-card">
        <a href="/post/{{id}}">
            <div class="blog-header">
                <h4>{{title}}</h4>
                <p>Posted by <span>{{user.username}}</span> on {{format_date createdAt}}</p>
            </div>
            <div class="blog-content">
                <p class="blog-main-content">{{content}}</p>
                <div class="num-of-comments">
                    <p>{{comments.length}} comments</p>
                </div>
            </div>
        </a>
    </div>

{{#each comments as |comment|}}
{{> blog-comments}}
{{/each}}

<div class="new-comment-container">
    <form class="new-comment-form">
        <label for="new-comment">Comment on this post:</label>
        <textarea id="new-comment" cols="30" rows="10"></textarea>
        <button type="submit" id="comment-btn">Add a comment</a>
    </form>
</div>

</div>
{{/with}}

<script src="/js/comment.js"></script>
